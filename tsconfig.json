{
	"extends": "@sindresorhus/tsconfig",
	"compilerOptions": {
		"allowImportingTsExtensions": true,
		"noEmit": true,
		"jsx": "preserve",
		"module": "esnext",
		"moduleResolution": "bundler",
		"plugins": [{ "name": "next" }],
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"include": ["src", "next-env.d.ts", ".next/types/**/*.ts"]
}
